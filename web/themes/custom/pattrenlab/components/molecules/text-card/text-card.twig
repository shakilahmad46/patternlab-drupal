{{ attach_library('pattrenlab/text-card') }}
<div class="text-card">
  {% include "@atoms/text/heading/heading.twig" with {
    "tag": tag,
    "title": title,
    "modifier": "heading-banner"
  } %}
  {% include "@atoms/text/paragraph/paragraph.twig" with {
    "tag": "p",
    "text": text
  } %}
  {% include "@atoms/button/button.twig" with {
    "button_title": "Read More",
    "modifier": "btn--gold btn--fit"
  } %}
</div>